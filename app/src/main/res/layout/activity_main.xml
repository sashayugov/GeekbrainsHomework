<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ACEFF8"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="First Lesson"
            android:textAlignment="center"
            android:textColor="#009688"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:ems="10"
            android:fontFamily="casual"
            android:inputType="textPersonName"
            android:text="Just edit me"
            android:textColor="#3F51B5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F44336"
            android:text="Don't touch me"
            android:textColor="@color/black" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:text="SwitchER"
            android:textAlignment="center"
            android:textColor="@color/purple_700"
            android:textColorHighlight="#009688"
            android:textOff="NOPE"
            android:textOn="YEP"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/checkBox"
            style="@android:style/Widget.Material.Light.CompoundButton.CheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="tick here"
            android:textAlignment="gravity"
            android:textSize="34sp" />

        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="PUSH ME"
            android:textColor="@color/teal_700"
            android:textOff="PUSH ME"
            android:textOn="ONE MORE PUSH"
            android:textSize="34sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>